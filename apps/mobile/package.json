{
  "name": "@playdate/mobile",
  "version": "0.1.0",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx,.ts,.tsx || exit 0",
    "type-check": "tsc --noEmit",
    "test:smoke": "npm run type-check && npm run lint && npx expo-doctor",
    "build:check:ios": "npx expo export --platform ios",
    "build:check:android": "npx expo export --platform android"
  },
  "dependencies": {
    "@expo/vector-icons": "~14.0.4",
    "expo": "~52.0.11",
    "expo-constants": "~17.0.8",
    "expo-font": "~13.0.4",
    "expo-linking": "~7.0.5",
    "expo-router": "~4.0.7",
    "nativewind": "^4.2.1",
    "react": "18.3.1",
    "react-native": "^0.76.9",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~18.3.12",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "babel-plugin-transform-define": "^2.1.4",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "typescript": "~5.3.3"
  }
}
